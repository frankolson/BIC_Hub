<!DOCTYPE html>
<html>
  <head>
    <title>BIChub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-fixed-top navbar-toggleable-sm navbar-inverse bg-primary">
        <div class="container">
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
              <span class="navbar-toggler-icon"></span>
          </button>
          <%= link_to 'BIC Hub', root_path, class: 'navbar-brand mr-auto hidden-xs-down' %>
          <div class="navbar-collapse collapse" id="collapsingNavbar">
            <ul class="navbar-nav ml-auto">
              <% if !user_signed_in? %>
                <li class="nav-item active">
                  <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
                </li>
                <li class="nav-item active">
                  <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
                </li>
              <% else %>
                <li class="nav-item active">
                  <%= link_to current_user.name, user_path(current_user), class: "nav-link" %>
                </li>
                <li class="nav-item active">
                  <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="container yield-start">
      <%= flash_messages %>
      <%= yield %>
    </div>
  </body>
</html>
