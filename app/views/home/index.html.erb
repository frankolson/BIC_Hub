<div class="row">
  <div class="col-md-3">
    <%= render 'shared/user_info', user: current_user %>
  </div>

  <div class="col-md-6">
    <div class="row">
      <div class="col-sm-12">
        <%= render 'posts/form', post: @post %>
        <hr>
      </div>
    </div>
    <div class="row">
      <div id="activities" class="col-sm-12">
        <%= render_activities(@activities)%>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <%= render 'shared/links' %>
  </div>
</div>
