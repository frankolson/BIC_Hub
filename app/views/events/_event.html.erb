<div class="card card-block">
  <div class="card-heading">
    <h5 class="name"><%= link_to @event.user.name, user_path(@event.user) %></h5>
    <span class="text-muted">created an <%= link_to 'event', @event %></span>
  </div>
  <div class="card-text">
    <div class="row">
      <div class="col-sm-11 offset-sm-1">
        <%= @event.name %>
        <div class="row">
          <div class="col-sm-12">
            <%= render 'shared/created_at', activity: @event %>
          </div>
          <div class="col-sm-12">
            <%= fa_icon'calendar' %> <%= @event.time.to_formatted_s(:short) %>
          </div>
          <div class="col-sm-12">
            <span class="like-count point-count text-muted small">
              <%= pluralize(@event.cached_votes_up, 'like') %>
            </span>
            <span class="comment-count point-count text-muted small">
              <%= pluralize(@event.comments_count, 'comment') %>
            </span>
            <% if belongs_to_user?(@event) %>
              <%= link_to event_path(@event), method: :delete, class:'btn btn-danger btn-sm float-sm-right' do %>
                <% fa_icon 'trash' %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <%= render 'shared/actions', resource: @event %>
  </div>
</div>
