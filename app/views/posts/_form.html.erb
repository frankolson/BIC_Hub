<div class="card card-block">
  <div class="card-text">

    <%= simple_form_for @post do |f| %>
      <div class="form-group">
        <h4>Update Status</h4>
        <%= f.input :content, class: 'form-control', autofocus: true, label: false, placeholder: 'What\'s on your mind?' %>
      </div>

      <div id="img-preview" class="form-group hidden">
        <img src="">
      </div>

      <div class="form-group hidden">
        <%= f.file_field :attachment %>
      </div>

      <div class="form-group">
        <a id="post-attachment" href="javascript:void(0);" class="float-sm-right btn btn-primary">
          <%= fa_icon 'image' %>
        </a>

        <%= f.button :submit, "Post", class: "btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
