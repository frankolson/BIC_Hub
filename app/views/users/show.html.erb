<div class="row">
  <div class="col-md-12">
    <%= render 'shared/timeline_pic', user: @user %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-3">
    <%= render 'shared/user_info', user: @user %>
  </div>

  <div class="col-md-6">
    <% if @user == current_user %>
      <%= render 'posts/form', post: @post %>
    <% end %>
  </div>

  <% if @user == current_user %>
    <div class="col-md-3">
      <%= render 'shared/links' %>
    </div>
  <% end %>
</div>
